@{
    ViewData["Title"] = "SignalR";
}

<section class="content">
    <div class="container">
        <div class="row">
            <div class="col-md-6">
                <div class="form-group">
                    <label>Username</label>
                    <input type="text" id="user" class="form-control" placeholder="Enter ...">
                </div>
                <div class="form-group">
                    <label>Text</label>
                    <input type="text" id="messageInput" class="form-control" placeholder="Enter ...">
                </div>
                <button type="button" id="sendButton" class="btn btn-primary">Send</button>
            </div>
        </div>
        <div class="row">
            <div class="col-6">&nbsp;</div>
            <div class="col-6">
                <ul id="messagesList"></ul>
            </div>
        </div>
    </div>

     <div class="container">
        <div class="row">
            <div class="col-md-6">
                <div class="form-group">
                    <label>ID</label>
                    <input type="text" id="ID" class="form-control" placeholder="Enter ...">
                </div>
                <div class="form-group">
                    <label>Company</label>
                    <input type="text" id="Company" class="form-control" placeholder="Enter ...">
                </div>
                <button type="button" id="update" class="btn btn-primary">Send</button>
            </div>
        </div>
        <div class="row">
            <div class="col-6">&nbsp;</div>
            <div class="col-6">
                <ul id="messagesList"></ul>
            </div>
        </div>
    </div>

    <div class="container">
        <div class="row">
            <div class="col-md-6">
                <div class="form-group">
                    <label>ID</label>
                    <input type="text" id="IDChart" class="form-control" placeholder="Enter ...">
                </div>
                <div class="form-group">
                    <label>Value chart</label>
                    <input type="text" id="valuechart" class="form-control" placeholder="Enter ...">
                </div>
                <button type="button" id="updateChart" class="btn btn-primary">Update Chart</button>
            </div>
        </div>
        <div class="row">
            <div class="col-6">&nbsp;</div>
            <div class="col-6">
                <ul id="messagesList"></ul>
            </div>
        </div>
    </div>

</section>
<script>

    $(function(){

        $("#update").on("click",function(){
            
            var d = new FormData();

            d.append("ID", $("#ID").val());
            d.append("CompanyName", $("#Company").val());
                
            $.ajax({
                type: "POST",
                url: "Update",
                data: d,
                dataType: "json",
                processData: false,
                contentType: false,
                success: function (response) {
                    //alert(JSON.stringify(response));
                }
            });
        
        });

        $("#updateChart").on("click",function(){
            
            var d = new FormData();

            d.append("id", $("#IDChart").val());
            d.append("yield", $("#valuechart").val());
                
            $.ajax({
                type: "POST",
                url: "UpdateChart",
                data: d,
                dataType: "json",
                processData: false,
                contentType: false,
                success: function (response) {
                    //alert(JSON.stringify(response));
                }
            });
        
        });

    });

</script>
<script src="~/lib/@@aspnet/signalr/dist/browser/signalr.js"></script>
<script src="~/js/signalR.js"></script>